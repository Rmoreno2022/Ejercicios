@model IEnumerable<Ejercicios.Web.DTOs.SurveyDTO>

<h2>Encuestas</h2>

<a asp-action="Create" class="btn btn-success mb-3">+ Crear Encuesta</a>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Título</th>
            <th>Descripción</th>
            <th>Opciones</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Title</td>
                <td>@s.Description</td>
                <td>@s.Options.Count()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@s.Id" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="Edit" asp-route-id="@s.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Vote" asp-route-id="@s.Id" class="btn btn-primary btn-sm">Votar</a>
                    <a asp-action="Results" asp-route-id="@s.Id" class="btn btn-dark btn-sm">Resultados</a>
                    <a asp-action="Delete" asp-route-id="@s.Id" class="btn btn-danger btn-sm"
                       onclick="return confirm('¿Eliminar encuesta?');">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
