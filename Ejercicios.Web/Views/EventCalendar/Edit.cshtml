@model Ejercicios.Web.DTOs.EventDTO

<h2>Editar Evento</h2>

<form method="post">
    <input asp-for="Id" type="hidden" />

    <div class="mb-3">
        <label>Título</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Descripción</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label>Fecha Inicio</label>
        <input asp-for="StartDate" type="datetime-local" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Fecha Fin</label>
        <input asp-for="EndDate" type="datetime-local" class="form-control" />
    </div>

    <div class="form-check mb-3">
        <input asp-for="HasReminder" class="form-check-input" />
        <label class="form-check-label">¿Recordatorio?</label>
    </div>

    <div class="mb-3">
        <label>Fecha Recordatorio</label>
        <input asp-for="ReminderDate" type="datetime-local" class="form-control" />
    </div>

    <button class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Index" asp-route-date="@Model.StartDate.Date" class="btn btn-secondary">Cancelar</a>
</form>
