@model IEnumerable<Ejercicios.Web.DTOs.TaskItemDTO>

<h2>Lista de tareas</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Nueva tarea</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tarea</th>
            <th>Descripción</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Title</td>
                <td>@t.Description</td>
                <td>
                    @if (t.IsCompleted)
                    {
                        <span class="badge bg-success">Completada</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">Pendiente</span>
                    }
                </td>
                <td>
                    <a asp-action="Toggle" asp-route-id="@t.Id" class="btn btn-secondary btn-sm">Cambiar estado</a>
                    <a asp-action="Edit" asp-route-id="@t.Id" class="btn btn-info btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@t.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
