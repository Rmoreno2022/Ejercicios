@model IEnumerable<Ejercicios.Web.DTOs.ExpenseDTO>

<h2>Gestión de Gastos</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Registrar Gasto</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Fecha</th>
            <th>Descripción</th>
            <th>Categoría</th>
            <th>Monto</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>@e.Date.ToShortDateString()</td>
                <td>@e.Description</td>
                <td>@e.CategoryName</td>
                <td>$@e.Amount</td>
            </tr>
        }
    </tbody>
</table>

<h4>Total: <strong>$@ViewBag.Total</strong></h4>

<hr />

<a asp-action="MonthlySummary" asp-route-year="@DateTime.Now.Year" asp-route-month="@DateTime.Now.Month"
   class="btn btn-secondary">Ver resumen mensual</a>
