@model Ejercicios.Web.DTOs.PasswordGeneratorDTO

<h2>Generador de Contraseñas</h2>

<form method="post">
    <div class="mb-3">
        <label>Longitud</label>
        <input asp-for="Length" class="form-control" type="number" min="4" max="40" />
    </div>

    <div class="form-check">
        <input asp-for="IncludeUppercase" class="form-check-input" />
        <label class="form-check-label">Incluir mayúsculas</label>
    </div>

    <div class="form-check">
        <input asp-for="IncludeLowercase" class="form-check-input" />
        <label class="form-check-label">Incluir minúsculas</label>
    </div>

    <div class="form-check">
        <input asp-for="IncludeNumbers" class="form-check-input" />
        <label class="form-check-label">Incluir números</label>
    </div>

    <div class="form-check">
        <input asp-for="IncludeSymbols" class="form-check-input" />
        <label class="form-check-label">Incluir símbolos</label>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Generar</button>
</form>
